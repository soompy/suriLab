# Environment variables for SuriBlog
# Copy this file to .env and fill in your actual values

# Database Configuration
# Neon PostgreSQL Database URL
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# Alternative: Local SQLite for development
# DATABASE_URL="file:./dev.db"

# Blog Administration
# Change this to a secure password (8+ characters recommended)
# 주의: 서버에서만 사용되는 비밀번호입니다. 클라이언트에 노출되지 않습니다.
BLOG_ADMIN_PASSWORD="your_secure_password_here"

# Email Configuration (for contact form)
# Naver Mail settings
EMAIL_USER="your_email@naver.com"
# Naver Mail App Password (16 characters)
# Generate at: Naver Mail > Settings > POP3/IMAP > App Password
EMAIL_PASS="your_16_char_app_password"

# Optional: Email service configuration
# EMAIL_SERVICE="naver"  # or "gmail", "outlook", etc.
# EMAIL_HOST="smtp.naver.com"
# EMAIL_PORT="587"

# Security
# Add your domain for CORS if needed
# NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# Development
# NODE_ENV="development"  # or "production"